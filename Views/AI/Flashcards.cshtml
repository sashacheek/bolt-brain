@model string[]

@{
    ViewData["Title"] = "Flashcards";
}

<div class="text-center main-content flashcards-page link-buttons" id="study">
    <h1 class="text-center display-1 title">Brain Bolt</h1>
    <div class="full-row icon-row">
        <img src="~/img/logo.png" alt="Brain Bolt Logo" />
        <h3>Flashcards Have Been Generated</h3>
    </div>
    <h3>@ViewBag.QuestionAmount Flashcards Ready on @ViewBag.StudyTopic.</h3>
    <div id="flashcards-grid">
    @if ((ViewBag.Index ?? 0) != 1)
    {
        <a asp-controller="AI" asp-action="PreviousFlashcard" class="previous">Previous Flashcard</a>
    }
    <div id="flashcards" class="flashcards" onclick="flipCard('@Model[0]', '@Model[1]')">
            <div class="boarder">
            <h5>Question @ViewBag.Index of @ViewBag.QuestionAmount</h5>
            <p id="flashcard-text">@Model[0]</p>
            </div>
    </div>
    @if ((ViewBag.Index ?? 0) != (ViewBag.QuestionAmount ?? 0))
    {
        <a asp-controller="AI" asp-action="NextFlashcard" class="next">Next Flashcard</a>
    }
        <a asp-controller="Home" asp-action="Study" id="finish">Finish</a>
    </div>
</div>

