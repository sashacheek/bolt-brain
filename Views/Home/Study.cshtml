@{
    ViewData["Title"] = "Study";
}

<div class="text-center main-content" id="study">
    <h1 class="text-center display-1 title">Brain Bolt</h1>
    <form id="study-content" class="container" asp-controller="AI" asp-action="Ask" method="post">
        <div class="full-row icon-row">
            <img src="~/img/logo.png" />
            <h3>What would you like to study?</h3>
        </div>
        <input class="full-row" name="studyTopic" placeholder="Insert Answer Here" required />
        <h4 class="full-row">Choose the number of Questions/Flashcards</h4>
        <input id="study-amount" type="number" name="questionAmount" min="1" max="100" required />
        <button id="gen-flash" name="action" value="GenerateFlashCards" type="submit">Generate Flash Cards</button>
        <button id="gen-quiz" name="action" value="GenerateQuiz" type="submit">Generate Quiz</button>
        <h4 class="full-row">Feel free to be as specific as you please with your study topic. Brain Bolt will tailor the questions to best fit your studying needs.</h4>
    </form>
</div>