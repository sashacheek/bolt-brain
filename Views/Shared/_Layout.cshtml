<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BrainBolt - @ViewData["Title"]</title>
    <link rel="icon" href="~/img/logo.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BoltBrain.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <button id="open-menu" onclick="openMenu()">
            <div id="hamburger-icon">
                <div></div>
                <div></div>
                <div></div>
            </div>
        </button>
        <nav role="navigation" id="side-menu">
            <ul>
                <li id="menu-title">Menu</li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li><a asp-controller="Home" asp-action="Study">Study</a></li> 
                    <li><a asp-controller="History" asp-action="Index">History</a></li>
                    <li><a asp-controller="Profile" asp-action="Index">Profile</a></li>
                    <li>
                        <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-link nav-link" style="display:inline; padding:0; border:none; background:none;">Logout</button>
                        </form>
                    </li>
                }
                else
                {
                    <li><a asp-controller="Account" asp-action="Login">Login</a></li>
                    <li><a asp-controller="Account" asp-action="Register">Register</a></li>
                }              
                <li><button id="close-menu" onclick="closeMenu()"> Close Menu</button></li>
            </ul>
        </nav>      
    </header>
    <main role="main" class="">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
